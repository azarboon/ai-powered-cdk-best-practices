{
  "name": "github-monitor-cdk",
  "version": "1.0.0",
  "description": "CDK app to monitor GitHub repository commits and send git diff notifications via SNS",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "tsc",
    "deploy": "cdk deploy",
    "destroy": "cdk destroy",
    "lint": "eslint . --ext .ts --max-warnings 0 --cache",
    "lint:fix": "eslint . --ext .ts --fix --cache",
    "validate": "npm run build && cdk synth",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "aws-cdk": "2.156.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jsdoc": "^48.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "husky": "^8.0.3",
    "prettier": "^3.2.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@aws-sdk/client-eventbridge": "^3.0.0",
    "aws-cdk-lib": "^2.205.0",
    "constructs": "^10.0.0"
  }
}
