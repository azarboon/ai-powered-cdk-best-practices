{
  "name": "github-monitor-cdk",
  "version": "1.0.0",
  "description": "CDK app to monitor GitHub repository commits and send git diff notifications via SNS",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:fast": "tsc --project tsconfig.dev.json",
    "type-check": "tsc --noEmit --project tsconfig.dev.json",
    "watch": "tsc -w",
    "issue-detector": "tsc --noEmit --listFiles",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "npm run validate && cdk deploy",
    "destroy": "cdk destroy",
    "lint": "eslint . --ext .js,.ts --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "validate": "npm run build && cdk synth",
    "lint-staged": "lint-staged",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "18.14.6",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "aws-cdk": "2.156.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jsdoc": "^48.2.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.0.5",
    "typescript": "~4.9.5"
  },
  "dependencies": {
    "@aws-sdk/client-eventbridge": "^3.0.0",
    "aws-cdk-lib": "2.156.0",
    "constructs": "^10.0.0"
  },
  "lint-staged": {
    "**/*.{ts}": [
      "npm run type-check",
      "eslint --fix --max-warnings 0"
    ],
    "**/*.{js}": [
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
