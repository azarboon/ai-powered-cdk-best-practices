{
  "name": "MyAgent",
  "description": "my default agent to be initialized",
  "hooks": {
    "agentSpawn": [
      {
        "command": "cat .amazonq/rules/PROJECT_RULES.md"
      }
    ]
  },
  "resources": ["file://README.md", "file://.amazonq/rules/PROJECT_RULES.md"],
  "mcpServers": {
    "awslabs.aws-api-mcp-server": {
      "command": "uvx",
      "args": ["awslabs.aws-api-mcp-server@latest"],
      "env": {
        "AWS_REGION": "us-east-1",
        "FASTMCP_LOG_LEVEL": "DEBUG"
      },
      "disabled": false,
      "autoApprove": []
    },
    "awslabs.cdk-mcp-server": {
      "command": "uvx",
      "args": ["awslabs.cdk-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "DEBUG"
      },
      "disabled": false,
      "autoApprove": []
    },
    "aws-knowledge-mcp-server": {
      "command": "uvx",
      "args": [
        "mcp-proxy",
        "--transport",
        "streamablehttp",
        "https://knowledge-mcp.global.api.aws"
      ],
      "env": {
        "FASTMCP_LOG_LEVEL": "DEBUG"
      }
    }
  },
  "allowedTools": [
    "fs_read",
    "@git",
    "aws___read_documentation",
    "aws___search_documentation",
    "CDKGeneralGuidance",
    "call_aws",
    "GetAwsSolutionsConstructPattern"
  ],
  "useLegacyMcpJson": true
}
